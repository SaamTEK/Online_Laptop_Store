@model ELaptop.Models.Product

@{
    ViewBag.Title = Model.Product_name;
}

<style>
    .flex-center {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

<h5 class="display-5">@Html.ActionLink("Home", "Index") > Showing Laptop: <b>@Model.Product_name</b></h5>

<div class="container">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-6 col-12 flex-center">
            <img src="@Url.Content(Model.ImagePath)" style="width:50%; height: 50%"/>
        </div>
        <div class="col-md-6 col-12">
            <h3><b>@Model.Product_name</b></h3>
            <p><span class="text-muted">Category:</span> @Model.Category</p>
            <hr />
            <h5><b>Product specification</b></h5>
            <ul>
                <li>Central Processing Unit (CPU): <b>@Model.CPU</b></li>
                <li>Random Access Memory (CPU): <b>@Model.RAM GigaBytes (GBs)</b></li>
                <li>Hard Disk Storage (CPU): <b>@Model.Storage GigaBytes (GBs)</b></li>
                <li><h4>Price: <span class="badge text-bg-primary"><b>₹ @Model.Price</b></span></h4></li>
            </ul>
            <div style="margin-top: 2em; margin-left: 2em">
                @Html.ActionLink("Buy now", "Order", new { id = Model.Product_id }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>
